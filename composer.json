{
    "name": "stephenjude/bloc-php-sdk",
    "description": "An SDK to easily work with the Oh Dear API",
    "keywords": [
        "oh dear",
        "monitoring",
        "api",
        "sdk"
    ],
    "homepage": "https://github.com/stephenjude/bloc-php-sdk",
    "license": "MIT",
    "authors": [
        {
            "name": "Stephen Jude",
            "email": "jude@pay4me.app",
            "homepage": "https://github.com/stephenjude/bloc-php-sdk",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "guzzlehttp/guzzle": "^7.0",
        "nesbot/carbon": "^2.35.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "psalm/plugin-laravel": "^1.2",
        "vlucas/phpdotenv": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "Stephenjude\\BlocPhpSdk\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Stephenjude\\BlocPhpSdk\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "format": "vendor/bin/php-cs-fixer fix",
        "test": "vendor/bin/phpunit"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    }
}
